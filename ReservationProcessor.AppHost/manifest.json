{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "username": {
      "type": "parameter.v0",
      "value": "{username.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "password": {
      "type": "parameter.v0",
      "value": "{password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "MessageBus": {
      "type": "container.v0",
      "connectionString": "amqp://{username.value}:{password.value}@{MessageBus.bindings.tcp.host}:{MessageBus.bindings.tcp.port}",
      "image": "docker.io/library/rabbitmq:3.13-management",
      "env": {
        "RABBITMQ_DEFAULT_USER": "{username.value}",
        "RABBITMQ_DEFAULT_PASS": "{password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "port": 16081,
          "targetPort": 5672
        },
        "management": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 15672
        }
      }
    },
    "MSSQL": {
      "type": "container.v0",
      "connectionString": "Server={MSSQL.bindings.tcp.host},{MSSQL.bindings.tcp.port};User ID=sa;Password={password.value};TrustServerCertificate=true",
      "image": "mcr.microsoft.com/mssql/server:2022-latest",
      "env": {
        "ACCEPT_EULA": "Y",
        "MSSQL_SA_PASSWORD": "{password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "port": 16082,
          "targetPort": 1433
        }
      }
    },
    "Postgres": {
      "type": "container.v0",
      "connectionString": "Host={Postgres.bindings.tcp.host};Port={Postgres.bindings.tcp.port};Username={username.value};Password={password.value}",
      "image": "docker.io/library/postgres:16.2",
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "{username.value}",
        "POSTGRES_PASSWORD": "{password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "port": 16083,
          "targetPort": 5432
        }
      }
    },
    "ReservationsDB": {
      "type": "value.v0",
      "connectionString": "{MSSQL.connectionString};Database=ReservationsDB"
    },
    "AcceptanceDB": {
      "type": "value.v0",
      "connectionString": "{MSSQL.connectionString};Database=AcceptanceDB"
    },
    "MasterDB": {
      "type": "value.v0",
      "connectionString": "{MSSQL.connectionString};Database=master"
    },
    "PostgresDefaultDB": {
      "type": "value.v0",
      "connectionString": "{Postgres.connectionString};Database=postgres"
    },
    "rejectionsdb": {
      "type": "value.v0",
      "connectionString": "{Postgres.connectionString};Database=rejectionsdb"
    },
    "ReservationService": {
      "type": "project.v0",
      "path": "../ReservationProcessor.ReservationService/ReservationProcessor.ReservationService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ConnectionStrings__MessageBus": "{MessageBus.connectionString}",
        "ConnectionStrings__ReservationsDB": "{ReservationsDB.connectionString}",
        "ConnectionStrings__MasterDB": "{MasterDB.connectionString}"
      }
    },
    "AcceptanceService": {
      "type": "project.v0",
      "path": "../ReservationProcessor.AcceptanceService/ReservationProcessor.AcceptanceService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ConnectionStrings__MessageBus": "{MessageBus.connectionString}",
        "ConnectionStrings__AcceptanceDB": "{AcceptanceDB.connectionString}",
        "ConnectionStrings__MasterDB": "{MasterDB.connectionString}"
      }
    },
    "RejectionService": {
      "type": "project.v0",
      "path": "../ReservationProcessor.RejectionService/ReservationProcessor.RejectionService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ConnectionStrings__MessageBus": "{MessageBus.connectionString}",
        "ConnectionStrings__rejectionsdb": "{rejectionsdb.connectionString}",
        "ConnectionStrings__PostgresDefaultDB": "{PostgresDefaultDB.connectionString}"
      }
    }
  }
}